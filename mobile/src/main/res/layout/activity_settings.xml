<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Settings">

    <TextView
        android:id="@+id/txt_open_wear_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/about_message" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/radio_description" />

    <RadioGroup
        android:id="@+id/grp_phone_ringer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <RadioButton
            android:id="@+id/rdb_silent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_silent"
            tools:checked="true" />

        <RadioButton
            android:id="@+id/rdb_vibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_vibrate" />

        <RadioButton
            android:id="@+id/rdb_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_none" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/chk_watch_unmute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/chk_unmute"
        tools:checked="true" />

    <CheckBox
        android:id="@+id/chk_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chk_confirm"
        tools:checked="true" />

</LinearLayout>
